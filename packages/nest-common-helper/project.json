{
  "name": "nest-common-helper",
  "root": "packages/nest-common-helper",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/nest-common-helper",
        "commands": [
          "rm -rf ./output",
          "rollup --config ./rollup.config.js",
          "cp ./package.json README.md ./output",
          "printf \"{\n  \\\"type\\\": \\\"commonjs\\\"\n}\n\" > ./output/cjs/package.json"
        ],
        "parallel": false
      }
    },
    "publish": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/nest-common-helper/output"
      },
      "configurations": {
        "file": {
          "command": "npm pack"
        },
        "local": {
          "command": "npm link"
        },
        "prod": {
          "command": "npm publish --access public --registry=https://registry.npmjs.org"
        }
      }
    }
  }
}
